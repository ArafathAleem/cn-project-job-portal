<%- include('layout', { title: "Recruiter Dashboard", body: `
    <h2>Welcome, <%= recruiter.name %>!</h2>
    <a href="/jobs/new">Post a New Job</a>
    
    <h3>Your Job Listings</h3>
    <ul>
        <% jobs.forEach(job => { %>
            <li>
                <h3><a href="/jobs/<%= job.id %>"><%= job.title %></a></h3>
                <a href="/jobs/<%= job.id %>/edit">Edit</a> |
                <a href="/jobs/<%= job.id %>/delete" onclick="return confirm('Are you sure?')">Delete</a>
            </li>
        <% }) %>
    </ul>
` }) %>
